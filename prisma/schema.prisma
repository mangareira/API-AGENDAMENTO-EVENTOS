generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                String   @id @default(uuid())
  title             String
  locationLatitude  String
  locationLongitude String
  date              DateTime
  createdAt         DateTime @default(now())
  coupons           String[]
  description       String
  categories        String[]
  banner            String
  flyers            String[]
  price             Float[]
  city              String
  formattedAddress  String
  participants      String[] // Relacionamento com Users pode ser feito depois
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  cpf       String
  password  String
  role      String
  eventos   String[] // Caso eventos seja uma relação com outra tabela, você pode mudar isso para um relacionamento
  createdAt DateTime @default(now())
}

model UserEvent {
  id        String   @id @default(uuid())
  eventId   String
  userId    String
  payment   Payment  @relation(fields: [paymentId], references: [id])
  tickets   Int
  discount  String?
  createdAt DateTime @default(now())
  paymentId String
}

model Payment {
  id             String      @id @default(uuid())
  status         String
  txid           String
  valor          Float
  qrCode         String
  pixCopiaECola  String
  expirationTime Int
  UserEvent      UserEvent[]
}
